<% if book.favorited_by?(current_user) %>
					
  <%= link_to book_favorites_path(book), class: "glyphicon glyphicon-heart" ,method: :delete, remote: true do %>
    <%= book.favorites.count %> 
  <% end %>

<% else %>
  
    <%= link_to book_favorites_path(book),class: "glyphicon glyphicon-heart-empty", method: :post, remote: true do %>
    
      <%= book.favorites.count %> 
    <% end %>
  
<% end %>